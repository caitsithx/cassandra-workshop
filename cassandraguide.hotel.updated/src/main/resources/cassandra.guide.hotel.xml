<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">



	
	<bean id="connectionFactory" name="connectionFactory"
		class="lixl.workshop.cassandra.connection.ClientConnectionFactory">
	<property name="configuration" ref="configuration"></property>
	</bean>
	<bean id="connectionPool" name="connectionPool"
		class="lixl.workshop.cassandra.connection.ClientConnectionPool">
	<constructor-arg ref="connectionFactory"
		type="me.lixl.nosql.persistence.ClientConnectionFactory">
	</constructor-arg>
	</bean>
	<bean id="entityDao" name="entityDao"
		class="lixl.workshop.cassandra.client.jpalike.EntityDao">
	<property ref="connectionPool" name="clientConnectionPool"></property>
	</bean>
	<bean id="configuration" name="configuration"
		class="org.apache.commons.configuration.PropertiesConfiguration">
	<constructor-arg type="String" value="conf/app.properties"></constructor-arg>
	</bean>
</beans>
